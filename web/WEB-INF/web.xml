<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LongConnServlet</servlet-name>
        <servlet-class>com.xxm.LongConnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShortPollingServlet</servlet-name>
        <servlet-class>com.xxm.ShortPollingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LongPollingServlet</servlet-name>
        <servlet-class>com.xxm.LongPollingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServerSentServlet</servlet-name>
        <servlet-class>com.xxm.ServerSentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LongConnServlet</servlet-name>
        <url-pattern>/LongConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShortPollingServlet</servlet-name>
        <url-pattern>/ShortPollingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LongPollingServlet</servlet-name>
        <url-pattern>/LongPollingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServerSentServlet</servlet-name>
        <url-pattern>/ServerSentServlet</url-pattern>
    </servlet-mapping>
</web-app>